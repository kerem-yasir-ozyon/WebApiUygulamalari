@using WebGaleriMvc.Data

@model Araba


<div class="border-success">

    <form asp-action="ArabaGuncelle" method="post">

        <div class="mb-3">
            <label asp-for="Marka" class="form-label">Marka</label>
            <input asp-for="Marka" class="form-control" placeholder="Marka">
        </div>
        <div class="mb-3">
            <label asp-for="Renk" class="form-label">Renk</label>
            <input asp-for="Renk" class="form-control" placeholder="Renk">

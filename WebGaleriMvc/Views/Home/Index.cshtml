@using WebGaleriMvc.Data
@model List<Araba>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center d-flex justify-content-end">
    
    <div>
       <a asp-action="ArabaEkle" class="btn btn-success">ArabaEkle</a>
    </div>

</div>

<table class="table table-hover table-bordered">
    <tr>
        <td>Id</td>
        <td>Renk</td>
        <td>Marka</td>
        <td>Sil</td>
        <td>Guncelle</td>
    </tr>  
    
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Renk</td>
            <td>@item.Marka</td>
            <td>
                <a asp-action="ArabaSil" asp-route-id="@item.Id" class="btn btn-danger">ArabaSil</a>
            </td>
            <td>
                <a asp-action="ArabaGuncelle" asp-route-id="@item.Id" class="btn btn-warning">ArabaGuncelle</a>
            </td>

        </tr>
        
    }
    
</table>


